{
  "name": "tap-dot-b",
  "description": "A TAP reporter that formats with dots.",
  "version": "0.1.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net/"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ],
      "babel-preset-power-assert"
    ]
  },
  "bin": {
    "tap-dot-b": "bin/tap-dot-b"
  },
  "bugs": {
    "url": "https://github.com/bouzuya/tap-dot-b/issues"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "tap-parser": "^6.0.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^8.10.49",
    "@types/power-assert": "^1.5.0",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^2.3.7",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-power-assert": "^1.0.0",
    "beater": "^5.0.1",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^11.9.0",
    "power-assert": "^1.6.1",
    "proxyquire": "1.8.0",
    "rimraf": "^2.6.3",
    "sinon": "^4.5.0",
    "typescript": "^2.9.2",
    "watch": "^1.0.2"
  },
  "files": [
    "bin/",
    "lib/"
  ],
  "homepage": "https://github.com/bouzuya/tap-dot-b",
  "keywords": [
    "reporter",
    "tap"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/tap-dot-b.git"
  },
  "scripts": {
    "build": "npm-run-all -s \"build:tmp:ts\" \"build:tmp:es2015\" \"build:lib\"",
    "build:lib": "npm-run-all -p \"build:lib:*\"",
    "build:lib:dts": "cpx \".tmp/es2015/src/**/*.d.ts\" \"lib\"",
    "build:lib:js": "cpx \".tmp/es5/src/**/*.js\" \"lib\"",
    "build:tmp:es2015": "babel --quiet .tmp/es2015/ -d .tmp/es5/",
    "build:tmp:ts": "tsc",
    "clean": "rimraf \".tmp\" \"lib\"",
    "prepublish": "npm-run-all -s \"clean\" \"build\"",
    "test": "nyc node .tmp/es5/test",
    "watch": "npm-run-all -p \"watch:*\"",
    "watch:es2015": "npm run build:tmp:es2015 -- --watch",
    "watch:lib": "watch --wait 2 'npm run build:lib' '.tmp/es5/src/'",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/src' '.tmp/es5/test'",
    "watch:ts": "tsc --watch"
  },
  "typings": "lib/index.d.ts"
}
